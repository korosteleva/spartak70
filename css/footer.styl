.footer-image
    width 100%
    height 0
    padding-top 60%
    background-repeat no-repeat
    background-position 50% 100%
    background-size contain
    position relative

    &-title
        position absolute
        right 0
        top 0
        transform translate(-50%, -100%)

        @media (max-width screenSm)
            display none

.image-capture
    font-family 'garamondcitalic', serif
    color spartakOrange
    font-size 14px
    line-height 20px

.footer-nav
    text-align center
    margin-top 60px

    &-link
        position relative
        font-family Times, serif
        text-transform uppercase
        text-decoration none
        color spartakRed
        font-size 14px
        line-height 18px
        letter-spacing 5.25

        &:after
            content ''
            position absolute
            background transparent url('../../css/images/arrow-right.svg') no-repeat 50% 50%
            width 5px
            height 17px
            bottom 0
            right -7px

        &:hover
            color spartakOrange

            &:after
                background-image url('../../css/images/arrow-right-hover.svg')

.sharing
