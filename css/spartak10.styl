@import "variables"

.footer-image-title
    transform translate(-50%, -50%)

.quote-boldin
    float right
    position relative
    width 140px
    height: 250px
    left 28px
    top 14px

    img
        width 344px

    .image-capture
        position absolute
        bottom -60px
        right -150px
        z-index 1

    @media (max-width screenSm)
        display none

.spartak10-triangle
    &-wrapper
        position relative
        transform translateY(-100px)
        @media (max-width screenXsm)
            transform translateY(-400px)

        &:after
            content ''
            position absolute
            bottom 0
            transform translateY(100%)
            left 0
            right 0
            background #000000
            height 500px

    position absolute
    top 1px
    left 0
    width 0
    right 0
    height 0
    border-style solid
    border-width 0 0 380px 100vw
    border-color transparent transparent #000000 transparent
    transform translateY(-100%)





