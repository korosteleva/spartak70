@import "variables"

@media (min-width screenMd)
    .quote-kovalchuk
        &-wrapper
            background-repeat no-repeat
            background-position 84% 4px
            position relative

            p
                padding-right 140px

        img
            display none

        .image-capture
            position absolute
            bottom 28%
            right -23%

@media (max-width screenMd)
    .quote-kovalchuk
        &-wrapper
            background transparent !important

        display block
        text-align center
        padding-bottom 20px

        img
            max-width 100%

.spartak11-coach
    &-wrapper
        position relative
        margin-bottom 90px

    &-title
        position absolute
        right 0
        top 0
        transform translateX(-50%) translateY(-50%)

@media (max-width screenMd)
    .spartak11-coach-title
        top 0
        bottom -7px
        transform translateX(-50%) translateY(100%)
        left 50%