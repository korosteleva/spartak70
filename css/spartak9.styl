@import "variables"

.spartak9
    &-game-wrapper
        margin-bottom 60px

        img
            width 100%

    &-players-wrapper
        position relative
        img
            width 100%

        .image-capture
            position absolute
            transform translateX(100%) translateY(100%)
            right -40px
            top 50%
            text-align center

    &-top-wrapper
        position relative
        overflow hidden

        .diagonal
            width 100%
            height 330px
            background spartakRed
            transform skewX(-48deg) skewY(-44deg)
            transform-style preserve-3d

            &-wrapper
                position absolute
                left 0
                right 0
                top 33%



